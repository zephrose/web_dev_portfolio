<%- include("partials/header") -%>

<h1>Compose</h1>

<form action="/compose" method="post" class="">
	<div class="form-group">
		<label>Title</label>
		<input type="text" class="form-control" name="blog_title" placeholder="Subject: Title">
	</div>
	<div class="form-group">
		<label>Post</label>
		<textarea class="form-control" name="blog_message" rows="5" placeholder="What's on your mind?"></textarea>
	</div>
	<button class="btn btn-primary" type="submit" name="submit">Publish</button>
</form>

<%- include("partials/footer") -%>